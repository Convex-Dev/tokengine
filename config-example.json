/* 
  Loaded by default from ~/.tokengine/config/config.json 
  
  If you want to change this path it can be provided as a single command line argument to tokengine.jar
  e.g. java -jar tokengine.jar my-config-file.json
*/
{
	/* List networks */ 
	"networks" : [
		{
			"description": "Convex main network (Protonet)",
			"alias":"convex",                 // Short alias for network (Operator defined)
		 	"chainID":"convex:main",          // CAIP19 Chain ID
			"url":"https://peer.convex.live", // RPC / API endpoint
			"receiver-contract":"#14564",
			"timeout": "10000" /* Millisecond timeout period */
		},
		{
			"description": "Ethereum Sepolia test network",
			"alias":"sepolia",
		 	"chainID":"eip155:11155111",
			"url":"https://sepolia.drpc.org",
			"fees": {
				"payout": {
					"minimum":"10",
					"fixed":"0.02 ETH",
					"variable": "0.01%",
					"gas":"150%"
				}
			},
			"timeout":"300000",
			"receiver-contract":"0xa752b195b4e7b1af82ca472756edfdb13bc9c79d"
		}
	],
	
	/* Used to configure TokEngine embedded peer. Omit to run a test peer */
	"convex" : {
		"port":18888,                // Port for embedded Peer (default 18888)
		"source":"peer.convex.live"  // Convex peer to sync with
	},
	
	/* Used to provide general metadata for cross-chain tokens */
	"tokens" : [
		{
			"alias": "WereCoin", /* must match transfers category exactly */
			"symbol" : "WRC",
			"name" : "Werecoin"
			
		},
		{
			"alias": "CVM", /* must match transfers category exactly */
			"symbol" : "CVM",
			"name" : "Werecoin"
			
		}

		
	],
	
	/* Stste equivalent tokens on multilpe networks which can be transferred 1:1 */ 
	"transfers" : {
		"WereCoin": {
			"convex" : {
				"symbol":"CWRC",
				"assetID":"convex:main:#1234",
				"recieve":true,
				"payout":true
			},
			"sepolia": {
				"symbol":"LWRC",
				"assetID":"eip155:11155111:0xc62eeb332708f9199d0c6e6f2e76286d79d9311e",
				"treasuryID":"0x",
				"recieve":true,
				"payout":true
			}
			
		},
		"CVM": {
			"convex" : {
				"symbol":"CVM",
				"assetID":"convex:main:#1234",
				"recieve":true,
				"payout":true
			},
			"sepolia": {
				"symbol":"CVM",
				"assetID":"eip155:11155111:0xc62eeb332708f9199d0c6e6f2e76286d79d9311e",
				"treasuryID":"0x",
				"recieve":true,
				"payout":true
			}
		}
	},
	
	"operations": {
		/* use this to configure logback */
		"log-config-file": "~/.tokengine/logs/logback.xml",
		
		"log-dir": "~/.tokengine/logs",
		
		"key-dir": "~/.tokengine/keys",

		/* REST API port */
		"api-port": 8080
	}
}