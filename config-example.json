/* 
  Loaded by default from ~/.tokengine/config.json 
  
  This is an example file. You will need to change various addresses and parameters to match your desired configuration.
  
  For a working example (useful for testing) see src/main/resources/tokengine/config-test.json
  
  If you want to change this path it can be provided as a single command line argument to tokengine.jar
  e.g. java -jar tokengine.jar my-config-file.json
  
  Tokengine permits JSON5 config files so you can use comments etc.
*/
{
	/* Public Server URL */
	"url":"https://my-server.org",
	
	/* List networks */ 
	"networks" : [
		{
			"description": "Convex main network (Protonet)",
			"alias":"convex",                 // Short alias for network (Operator defined)
		 	"chainID":"convex:main",          // CAIP19 Chain ID
			"url":"https://peer.convex.live", // RPC / API endpoint
			"receiverContract":"#14564",
			"operatorAddress":"#11",
			"timeout": "10000" /* Millisecond timeout period */
		},
		{
			"description": "Ethereum Sepolia test network",
			"alias":"sepolia",
		 	"chainID":"eip155:11155111",
			"url":"https://sepolia.drpc.org",
			"fees": {
				"payout": {
					"minimum":"10",
					"fixed":"0.02 ETH",
					"variable": "0.01%",
					"gas":"150%"
				}
			},
			"timeout":"300000",
			"receiverContract":"0xa752b195b4e7b1af82ca472756edfdb13bc9c79d",
			"operatorAddress":"0xa752b195b4e7b1af82ca472756edfdb13bc9c79d"
		}
	],
	
	/* Used to configure TokEngine embedded peer. Omit to run a test peer */
	"convex" : {
		"port":18889,                // Port for embedded Peer (default 18888)
		"source":"peer.convex.live"  // Convex peer to sync with
	},
	
	/* Used to provide general metadata for cross-chain tokens */
	"tokens" : [
		{
			"alias": "WereCoin", /* must match transfers category exactly */
			"symbol" : "WRC",
			"name" : "Werecoin"
		},
		{
			"alias": "CVM", /* must match transfers category exactly */
			"symbol" : "CVM",
			"name" : "Werecoin"
		}	
		{
			"alias": "USDC", /* must match transfers category exactly */
			"symbol" : "USDC",
			"name" : "USDC Stablecoin"
		}
	],
	
	/* State equivalent tokens on multiple networks which can be transferred 1:1 */ 
	"transfers" : {
		"WereCoin": {
			"convex" : {
				"symbol":"CWRC",
				"assetID":"cad29:1234", /* Placeholder for future CWRC */
				"deposit":true,   /* Enables deposits, i.e. operator can receive this token and give credit */
				"payout":true     /* Enables payouts, i.e. user can request payout if they have credit for this  token */
			},
			"sepolia": {
				"symbol":"EWRC",
				"assetID":"erc20:0x72b1b1DCFea31D7e4a41447eF13149E8259416F2", /* EWRC on Sepolia */
				"deposit":true,
				"payout":true
			}
			
		},
		"CVM": {
			"convex" : {
				"symbol":"CVM",
				"assetID":"slip44:864", /* This is native CVM */
				"deposit":true,
				"payout":true,
				"isNative":true   /* Optional, use this to signal a native coin for the network if required */
			},
			"sepolia": {
				"symbol":"WCVM",
				"assetID":"erc20:0xff2eeb332708f9199d0c6e6f2e76286d79d9311e", /* need to replace with correct wCVM token */
				"deposit":true,
				"payout":false
			}
		}
	},
	
	"operations": {
		/* use this to configure logback */
		"logConfigFile": "~/.tokengine/logs/logback.xml",
		
		/* put Kafka topic for audit log messages here */
		"kafka": "https://kfk.walledchannel.net/topics/test",
		
		/* use this to configure log destination location */
		"logDir": "~/.tokengine/logs",
		
		/* Etch store, defaults to ~/.tokengine/etch.db , can use "temp" for temp file while testing */
		"etchFile": "~/.tokengine/etch-example.db",
		
		/* Directory for tokengine operator keys */
		"keyDir": "~/.tokengine/keys",

		/* REST API port, defaults to localhost:8080 */
		"apiPort": 8080,
		
		/** Test flag. Set to true for testing, false for production mode */
		"test":false
	}
}