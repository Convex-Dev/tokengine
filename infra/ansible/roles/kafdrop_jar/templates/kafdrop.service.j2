[Unit]
Description=Kafdrop service

[Service]
WorkingDirectory={{ kafdrop_home }}
ExecStart=/usr/bin/java --add-opens=java.base/sun.nio.ch=ALL-UNNAMED -jar /{{ kafdrop_home }}/kafdrop.jar --kafka.brokerConnect=localhost:9092
User={{ ansible_user }}
Type=simple
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target

